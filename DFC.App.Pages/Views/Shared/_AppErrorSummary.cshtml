@{
    var showHideErrorSummary = ViewData.ModelState.IsValid ? "dfc-composite-shell-hide" : "";
}

<div class="govuk-error-summary @showHideErrorSummary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
    <h2 class="govuk-error-summary__title" id="error-summary-title">
        There is a problem
    </h2>
    <div class="govuk-error-summary__body">
        <ul class="govuk-list govuk-error-summary__list">
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[key].Errors)
                {
                    if (string.IsNullOrWhiteSpace(key))
                    {
                        <li>
                            @error.ErrorMessage
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="#@key.Replace("." ,"_", StringComparison.Ordinal)">@error.ErrorMessage</a>
                        </li>
                    }
                }
            }
        </ul>
    </div>
</div>
