@model HeroBannerViewModel


@if (Model.ShowHeroBanner && !string.IsNullOrWhiteSpace(Model.Content?.Value))
{
    <header class="ncs-hero">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </header>
}
